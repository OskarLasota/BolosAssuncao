<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:textAlignment="center"
                android:textSize="22sp"
                android:paddingBottom="15dp"
                android:text="Pra quem estamos entregando?"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:maxLines="1"
                    android:hint="Nome completo"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingBottom="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:inputType="number"
                    android:text="+55 "
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:textAlignment="center"
                android:textSize="22sp"
                android:paddingBottom="15dp"
                android:text="Pra onde estamos entregando?"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:hint="Rua, Número, Bairro"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complemento"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:hint="Informações adicionais"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CEP"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="number"
                    android:hint="CEP"
                    android:textColor="#fff"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instruções de entrega"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:paddingTop="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingBottom="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="Sua mensagem aqui"
                    android:singleLine="true"
                    android:textColor="#fff"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:textAlignment="center"
                android:textSize="22sp"
                android:paddingBottom="20dp"
                android:text="Data de entrega"
                />

            <TextView
                android:id="@+id/tv_selecttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECIONAR HORA ▼"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingBottom="30dp"
                android:textColor="#c6c1c1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_selectdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECIONAR DATA ▼"
                android:padding="10dp"
                android:textColor="#c6c1c1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#c6c1c1"
                android:textAlignment="center"
                android:textSize="22sp"
                android:paddingBottom="15dp"
                android:text="Forma de Pagamento"
                />
            <RadioGroup
                android:id="@+id/radio_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp">
                <RadioButton
                    android:id="@+id/radio_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#c6c1c1"
                    android:text="Cartão de débito"
                    />
                <RadioButton
                    android:id="@+id/radio_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#c6c1c1"
                    android:text="Dinheiro na Entrega"
                    />
            </RadioGroup>

            <Button
                android:id="@+id/btn_orderdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:backgroundTint="@color/brownish"
                android:text="Faça seu pedido"
                />

        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>
</layout>